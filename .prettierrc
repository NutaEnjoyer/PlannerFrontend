
{
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,
  "useTabs": true,
  "printWidth": 80,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "singleAttributePerLine": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "@/components/(.*)$",
    "@/layout/(.*)$",
    "@/ui/(.*)$",
    "@/providers/(.*)$",
    "@/constants/(.*)$",
    "@/types/(.*)$",
    "@/assets/(.*)$",
    "@/config/(.*)$",
    "@/store/(.*)$",
    "@/hooks/(.*)$",
    "@/utils/(.*)$",
    "@/api/(.*)$",
    "../../(.*)",
    "../../(.*)",
    "(.SCSS)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
